    <script>

        function calculateTieredPrice(mailboxCount) {
            // Define pricing tiers: [maxCountInTier, pricePerUnit]
            const tiers = [
                [499, 2.00],   // Tier 1: 1-499 at €2.00
                [500, 1.70],   // Tier 2: 500-999 at €1.70
                [4000, 1.45],  // Tier 3: 1000-4999 at €1.45
                [5001, 1.23]   // Tier 4: 5000-10000 at €1.23
            ];

            let totalPrice = 0;
            let remaining = mailboxCount;

            for (const [tierCapacity, pricePerUnit] of tiers) {
                if (remaining <= 0) break;

                const tierCount = Math.min(remaining, tierCapacity);
                totalPrice += tierCount * pricePerUnit;
                remaining -= tierCount;
            }

            return parseFloat(totalPrice.toFixed(2));
        }

        function formatEuro(amount) {
            const rounded = Math.round(amount * 100) / 100;
            const formatted = rounded.toFixed(2);
            const parts = formatted.split('.');
            parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, '.');
            return '€' + parts.join(',');
        }

        function formatUSD(amount) {
            const rounded = Math.round(amount * 100) / 100;
            const formatted = rounded.toFixed(2);
            const parts = formatted.split('.');
            parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ',');
            return '$' + parts.join('.');
        }

        function formatInteger(number) {
            return Math.floor(number).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
        }

        $(function () {
            var $document = $(document);
            var selector = '[data-rangeslider]';
            var $inputRange = $(selector);
            function valueOutput(element) {
                var value = element.value;
                var price = calculateTieredPrice(value);
                document.getElementById('price').innerHTML = formatEuro(calculateTieredPrice(value)) + " (or " + formatUSD((price * 1.2).toFixed(2)) + ")";
                document.getElementById('mailboxes').innerHTML = "per year for <b>" + formatInteger(value) + "</b> mailboxes";
                if (value < 150) {
                    document.getElementById('support').innerHTML = "(add " + (150 - value) + " more mailboxes to get priority support)";
                } else {
                    document.getElementById('support').innerHTML = "(priority support included)";
                }

            } /** * Initial value output */
            for (var i = $inputRange.length - 1; i >= 0; i--) {
                valueOutput($inputRange[i]);
            };
            $document.on('input', selector, function (e) {
                valueOutput(e.target);
            });
            $inputRange.rangeslider({
                polyfill: false
            });

        });

    </script>
